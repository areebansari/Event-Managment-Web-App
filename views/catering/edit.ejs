<% include ../partials/header %>

    <div class="row">
        <h1 style="text-align: center">Edit <%= catering.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/catering/<%=catering._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" value="<%= catering.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description" value="<%= catering.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" placeholder="Cost Per Person ($CA)" value="<%= catering.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Location" value="<%= catering.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="beverages" placeholder="Bevarages (Yes/No)" value="<%= catering.beverages %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="contactno" placeholder="Contact No(s)" value="<%= catering.contactno %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL" value="<%= catering.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/catering">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>