<% include ../partials/header %>
    <div class="row">
        <h1 style="text-align: center">Edit <%= decorations.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/decorations/<%=decorations._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="Name" value="<%= decorations.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="Description" value="<%= decorations.description %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="price" placeholder="Cost Per Day ($CAD)" value="<%= decorations.price %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="location" placeholder="Location" value="<%= decorations.location %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="contactno" placeholder="Contact No(s)" value="<%= decorations.contactno %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="Image URL" value="<%= decorations.image %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/decorations/<%= decorations._id %>">Go Back</a>
        </div>
    </div>

<% include ../partials/footer %>