<% include ../partials/header%>

    <div class="row">
        <h1 style="text-align: center">Create New Comment to <%= decorations.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/decorations/<%= decorations._id %>/comments" method="POST">
                <div class="form-group">
				<input class="form-control" type="text" name="comment[text]" placeholder="Comment">
                </div>
                <div class="form-group">
                    <input class="btn btn-lg btn-primary btn-block" type="submit" value="Submit!!">
                </div>
            </form>
            <a href="/decorations/<%= decorations._id %>/">Go Back</a>
        </div>
	</div>
	
<% include ../partials/footer %>